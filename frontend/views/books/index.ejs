<div class="books-wrapper">
    <h4 class="mb-3"> book list</h4>
    <div class="books">
        <table class="table table-dark table-striped">
        <thead class="table-light">
            <tr>
            <th scope="col">Title</th>
            <th scope="col">Categories</th>
            <th scope="col">authors</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
                <% books.forEach(function(book){ %>

            <tr>
                <td><%= book.title %></td>
                <td><%= book.category %></td>
                <td><%= book. author %></td>

                <td>
                    <a class="text-info-emphasis" href="/<%= book.id %>/edit"><i class="bi bi-pencil-square"></i></a>
                    <a class="text-info-emphasis" href="/<%= book.id %>/delete"><i class="bi bi-x-circle-fill"></i></a>
                </td>
            </tr>
            <% }) %>
        </tbody>
        </table>
    </div>
    <div class="mt-3">
        <a href="/create" class="btn btn_small btn-primary"> add to book</a>
    </div>
</div>